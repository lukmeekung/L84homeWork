        <Button Content="Show All" HorizontalAlignment="Left" Height="40" Margin="516,201,0,0" VerticalAlignment="Top" Width="154" Click="Button_Click_2"/>
        <TextBox x:Name="txtData" HorizontalAlignment="Left" Height="50" Margin="106,95,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="564"/>
        <TextBlock HorizontalAlignment="Left" Margin="45,113,0,0" TextWrapping="Wrap" Text="Data" VerticalAlignment="Top" RenderTransformOrigin="0.52,0.525" Height="32" Width="42"/>

    </Grid>
